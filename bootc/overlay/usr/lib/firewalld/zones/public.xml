<?xml version="1.0" encoding="utf-8"?>
<zone>
  <short>Public</short>
  <description>The default zone</description>

  <!-- These services are available to everybody. -->
  <service name="http"/>
  <service name="mdns"/>
  <service name="dhcpv6-client"/>

  <!--
  Only allow SSH from a known list of sources, cutting down the amount of failed
  login attempts by bots.
  -->
  <rule>
    <source ipset="admins" />
    <service name="ssh" />
    <accept />
  </rule>

  <forward/>
</zone>
